<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="product" class="learn.bean.Product"/>

    <bean name="featuredProduct" class="learn.bean.Product">
        <constructor-arg name="name" value="Ultimate Olive Oil"/>
        <constructor-arg name="description" value="The purest olive oil on the market"/>
        <constructor-arg name="price" value="9.95"/>
    </bean>

    <bean name="featuredProduct2" class="learn.bean.Product">
        <constructor-arg index="0" value="Ultimage Olive Oil"/>
        <constructor-arg index="1" value="The pures Olive Oil on the market"/>
        <constructor-arg index="2" value="9.95"/>
    </bean>

    <bean id="localDate" class="java.time.LocalDate" factory-method="now"/>
</beans>
